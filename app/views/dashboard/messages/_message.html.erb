<% if !@bar_shown && @last_read_at && message.created_at > @last_read_at %>
  <% @bar_shown = true %>
  <div class="border-bottom border-danger"></div>
<% end %>

<% if message.user_id == current_user.id %>
  <div class="chat">
    <div class="chat-body">
      <div class="chat-message"><%= message.body %></div>
    </div>
  </div>
<% else %>
  <div class="chat chat-left">
    <div class="chat-body">
      <div class="chat-message"><%= message.body %></div>
    </div>
  </div>
<% end %>
