<div class="page-content">
  <section class="row">
    <div class="col-12 col-lg-9">
      <%= render "front_pages/homes/show/general_statistics" %>
      <%= render "front_pages/homes/show/profile_visit_by_month" %>
      <div class="row">
        <%= render "front_pages/homes/show/profile_visit_by_country" %>
        <%= render "front_pages/homes/show/latest_comments" %>
      </div>
    </div>
    <div class="col-12 col-lg-3">
      <div class="card">
        <div class="card-body py-4 px-5">
          <div class="d-flex align-items-center">
            <div class="avatar avatar-xl">
              <%= image_tag "mazer/faces/1.jpg", alt: "Face 1" %>
            </div>
            <div class="ms-3 name">
              <h5 class="font-bold">John Duck</h5>
              <h6 class="text-muted mb-0">@johnducky</h6>
            </div>
          </div>
        </div>
      </div>
      <%= render "front_pages/homes/show/recent_messages" %>
      <%= render "front_pages/homes/show/visitors_profile" %>
    </div>
  </section>
</div>
