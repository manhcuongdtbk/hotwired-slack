<% content_for :wrapper_id, "auth" %>

<div class="row h-100">
  <div class="col-lg-5 col-12">
    <div id="auth-left">
      <div class="auth-logo">
        <%= link_to root_path do %>
          <%= image_tag "mazer/logo/logo.png", alt: "Logo" %>
        <% end %>
      </div>
      <h1 class="auth-title"><%= t(".sign_in") %>.</h1>
      <p class="auth-subtitle mb-5">Log in with your data that you entered during registration.</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: %>

        <div class="form-group position-relative has-icon-left mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-xl", placeholder: "Email" %>
          <div class="form-control-icon">
            <i class="bi bi-person"></i>
          </div>
        </div>

        <div class="form-group position-relative has-icon-left mb-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-xl", placeholder: "Password" %>
          <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
          </div>
        </div>

        <div class="form-check form-check-lg d-flex align-items-end">
          <%= f.check_box :remember_me, class: "form-check-input me-2" %>
          <%= f.label :remember_me, "Keep me logged in", class: "form-check-label text-gray-600" %>
        </div>

        <%= f.submit t(".sign_in"), class: "btn btn-primary btn-block btn-lg shadow-lg mt-5" %>
      <% end %>

      <div class="text-center mt-5 text-lg fs-4">
        <p class="text-gray-600">
          Don't have an account?  <%= link_to t(".sign_up"), new_registration_path(resource_name), class: "font-bold" %>.
        </p>
        <p><%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: "font-bold" %>.</p>
      </div>
    </div>
  </div>
  <div class="col-lg-7 d-none d-lg-block">
    <div id="auth-right">
    </div>
  </div>
</div>
