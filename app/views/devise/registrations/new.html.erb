<% content_for :wrapper_id, "auth" %>

<div class="row h-100">
  <div class="col-lg-5 col-12">
    <div id="auth-left">
      <div class="auth-logo">
        <%= link_to root_path do %>
          <%= image_tag "mazer/logo/logo.png", alt: "Logo" %>
        <% end %>
      </div>
      <h1 class="auth-title"><%= t(".sign_up") %></h1>
      <p class="auth-subtitle mb-5">Input your data to register to our website.</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: %>

        <div class="form-group position-relative has-icon-left mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control form-control-xl" %>
          <div class="form-control-icon">
            <i class="bi bi-envelope"></i>
          </div>
        </div>

        <div class="form-group position-relative has-icon-left mb-4">
          <%= f.text_field :name, autocomplete: "name", placeholder: "Name", class: "form-control form-control-xl" %>
          <div class="form-control-icon">
            <i class="bi bi-person"></i>
          </div>
        </div>

        <div class="form-group position-relative has-icon-left mb-4">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password #{t("devise.shared.minimum_password_length", count: @minimum_password_length)}", class: "form-control form-control-xl" %>
          <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
          </div>
        </div>

        <div class="form-group position-relative has-icon-left mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control form-control-xl" %>
          <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
          </div>
        </div>

        <%= f.submit t(".sign_up"), class: "btn btn-primary btn-block btn-lg shadow-lg mt-5" %>
      <% end %>

      <div class="text-center mt-5 text-lg fs-4">
        <p class="text-gray-600">Already have an account? <%= link_to t(".sign_in"), new_session_path(resource_name), class: "font-bold" %>.</p>
      </div>
    </div>
  </div>
  <div class="col-lg-7 d-none d-lg-block">
    <div id="auth-right">
    </div>
  </div>
</div>
